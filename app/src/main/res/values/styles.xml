<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CreateEditDeleteButton">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="normal_buttons">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="create_buttons">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/green_forest</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="facebook_button_custom">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="post_list_item">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="post_list_date">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white_text</item>


    </style>

    <style name="add_photo_buttons">
        <item name="android:background">@color/green_forest</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="add_video_buttons">
        <item name="android:background">@color/bright_purple</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="back_buttons">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
